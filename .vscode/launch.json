        "clear": true                        // <-- this line
      }
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug Current file",
      "program": "${relativeFileDirname}/${fileBasenameNoExtension}.out",
      "args": [],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Build Current File",
      "initCommands": ["command source ${workspaceRoot}/.lldbinit"],
      "presentation": {
        "clear": true                        // <-- this line
      }
    }
  ]
